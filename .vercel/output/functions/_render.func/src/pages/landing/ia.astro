    <script>
        // Timer functionality
        function updateTimer() {
          const endTime = new Date().getTime() + 48 * 60 * 60 * 1000;
      
          function update() {
            const timerElement = document.getElementById('timer');
            if (!timerElement) return; // VerificaciÃ³n de nulo
      
            const now = new Date().getTime();
            const distance = endTime - now;
      
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      
            timerElement.innerHTML = `
              <div class="text-center">
                <div class="text-3xl font-bold">${String(hours).padStart(2, '0')}</div>
                <div class="text-xs text-red-400">HORAS</div>
              </div>
              <div class="text-3xl font-bold">:</div>
              <div class="text-center">
                <div class="text-3xl font-bold">${String(minutes).padStart(2, '0')}</div>
                <div class="text-xs text-red-400">MINUTOS</div>
              </div>
              <div class="text-3xl font-bold">:</div>
              <div class="text-center">
                <div class="text-3xl font-bold">${String(seconds).padStart(2, '0')}</div>
                <div class="text-xs text-red-400">SEGUNDOS</div>
              </div>
            `;
          }
      
          update();
          setInterval(update, 1000);
        }
      
        // Form handling
