---
import Layout from '../../layouts/Layout.astro';
import ServicesSection from '../../components/index_services_section.astro';
import Testimonials from '../../components/testimonials_section.astro';
import CTASection from '../../components/index_cta_section.astro';
import ProcessSection from '../../components/index_process_section.astro';
import FAQ_Services from '../../components/faq_section.astro';

interface FAQItem {
  question: string;
  answer: string;
}
interface homeFAQs { 
  title: string;
  description: string;
  tag: string;
  faqItems: FAQItem[]; 
};

const homeFAQs = {
  title: "Preguntas Frecuentes",
  description: "Resolvemos tus dudas sobre nuestros servicios de automatización e Inteligencia Artificial",
  tag: "FAQ",
  faqItems: [
    {
      question: "¿Qué servicios ofrece Nexito Technology?",
      answer: "Ofrecemos servicios especializados en automatización de procesos, desarrollo de soluciones con Inteligencia Artificial, consultoría tecnológica, implementación de Business Intelligence, Power BI y servicios SAP. Nuestro objetivo es transformar y optimizar los procesos empresariales mediante tecnología avanzada."
    },
    {
      question: "¿Cómo puedo saber si mi empresa necesita automatización?",
      answer: "Si tu empresa dedica mucho tiempo a tareas repetitivas, maneja grandes volúmenes de datos manualmente, o busca mejorar la eficiencia operativa, probablemente te beneficiarías de la automatización. Ofrecemos una consulta inicial gratuita para evaluar tus necesidades específicas."
    },
    {
      question: "¿Cuánto tiempo lleva implementar una solución de automatización?",
      answer: "El tiempo de implementación varía según la complejidad del proyecto y las necesidades específicas de tu empresa. Típicamente, los proyectos pueden llevar desde algunas semanas para automatizaciones simples hasta varios meses para transformaciones más completas. Siempre proporcionamos un cronograma detallado al inicio del proyecto."
    },
    {
      question: "¿Qué soporte ofrecéis después de la implementación?",
      answer: "Proporcionamos soporte técnico continuo, mantenimiento y actualizaciones para todas nuestras soluciones. Además, ofrecemos formación para tu equipo y asistencia permanente para asegurar que obtienes el máximo beneficio de nuestras implementaciones."
    },
    {
      question: "¿Trabajáis con empresas de cualquier tamaño?",
      answer: "Sí, adaptamos nuestras soluciones a empresas de todos los tamaños. Desde startups hasta grandes corporaciones, desarrollamos soluciones escalables que se ajustan a tus necesidades y presupuesto específicos."
    }
  ]
};

const pageTitle = "Servicios y Soluciones Tecnológicas | Nexito Tech";
const pageDescription = "Descubre nuestros servicios de automatización inteligente, IA y consultoría tecnológica. Soluciones personalizadas y escalables para optimizar tu negocio.";

// Contenido extra para la página de servicios
const heroContent = {
  title: "Nuestros Servicios",
  subtitle: "Soluciones Tecnológicas que Transforman tu Negocio",
  description: "Ofrecemos un conjunto completo de servicios tecnológicos diseñados para impulsar la eficiencia y el crecimiento de tu empresa."
};

const benefitsContent = [
  {
    title: "Experiencia Comprobada",
    description: "Más de 5 años transformando empresas con tecnología de vanguardia"
  },
  {
    title: "Soluciones Personalizadas",
    description: "Adaptamos cada servicio a tus necesidades específicas"
  },
  {
    title: "Soporte Continuo",
    description: "Acompañamiento en todo el proceso de implementación"
  },
  {
    title: "Tecnología de Punta",
    description: "Utilizamos las últimas herramientas y metodologías del mercado"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section Mejorada -->
  <section class="relative py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-white"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-1.5 mb-4 text-sm font-medium text-blue-600 bg-blue-100 rounded-full">
          Servicios Profesionales
        </span>
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          {heroContent.title}
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-blue-800">
            {heroContent.subtitle}
          </span>
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {heroContent.description}
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="https://nexito.tech/consultoria-gratuita/"
            onclick="window.dataLayer.push({
              'event': 'schedule_call_services_index',
              'eventCategory': 'engagement',
              'eventAction': 'click',
              'eventLabel': 'free_call_30min'
            })"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-xl transition-colors duration-200"
          >
            Consulta Gratuita
          </a>
          <a 
            href="#servicios"
            class="inline-flex items-center justify-center px-8 py-4 text-base font-medium text-blue-600 bg-white border-2 border-blue-600 hover:bg-blue-50 rounded-xl transition-colors duration-200"
          >
            Ver Servicios
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Beneficios Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {benefitsContent.map((benefit) => (
          <div class="bg-gray-50 p-6 rounded-xl">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ServicesSection Existente -->
  <ServicesSection />

  <!-- Proceso de Trabajo -->
  <ProcessSection />

  <!-- Testimonios Específicos -->
  <Testimonials />

    <!-- CTA Final -->
  <CTASection />

  <!-- FAQ Section -->
  <FAQ_Services { ...homeFAQs } />
</Layout>