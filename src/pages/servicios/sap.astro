import Divider from "../../components/Divider_Services.astro";
import ContactServices from "../../components/Contact_Services.astro";
import JsonLD from "../../components/JsonLD.astro";

// Interfaces
interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface UseCase {
  title: string;
  description: string;
  image: string;
  link: string;
  linkText: string;
}

interface ProcessStep {
  step: number;
  title: string;
  description: string;
}

interface FAQItem {
  question: string;
  answer: string;
}

interface PageData {
  title: string;
  description: string;
  hero: {
    title: string;
    subtitle: string;
    description: string;
    tag: string;
  };
  features: {
    title: string;
    subtitle: string;
    description: string;
    tag: string;
    features: Feature[];
  };
  useCases: {
    title: string;
    subtitle: string;
    description: string;
    tag: string;
    useCases: UseCase[];
    extraCTA: {
      text: string;
      href: string;
    };
  };
  benefits: {
    title: string;
    subtitle: string;
    description: string;
    tag: string;
    benefits: string[];
  };
  process: {
    title: string;
    subtitle: string;
    description: string;
    tag: string;
    steps: ProcessStep[];
  };
  faq: {
    title: string;
    description: string;
    tag: string;
    faqItems: FAQItem[];
  };
  cta: {
    title: string;
    description: string;
    buttonText: string;
    buttonLink: string;
    features: string[];
  };
  faqCta: {
    title: string;
    description: string;
    btnText: string;
    btnLink: string;
  }
}

